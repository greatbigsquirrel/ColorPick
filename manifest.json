{
   "manifest_version": 2,
   "description": "A simple eye dropper tool allowing you to pick colors from webpages.",
   "name": "Color Picker",
   "browser_action": {
      "default_icon": "icon19.png",
      "default_title": "Color Picker",
      "default_popup": "popup.html"
    },
	 "content_scripts": [ {
      "js": [ "colorpick.user.js" ],
      "run_at": "document_start",
      "matches": [ "*://*/*" ]
   } ],
   "background": {
      "scripts": ["background.js"]
   },
   "options_page": "options.html",
   "icons": { "16": "icon16.png",
           "32": "icon32.png",
           "48": "icon48.png",
           "64": "icon64.png",
          "128": "icon128.png" },
   "web_accessible_resources": [
     "crosshair.png",
     "close.png"
   ],
   "permissions": [
      "tabs", "webRequest", "webNavigation", "*://*/*"
   ],
   "content_security_policy": "script-src 'self' https://cdn.extensionanalytics.com; object-src 'self'",
   "version": "0.0.1.36"
}
